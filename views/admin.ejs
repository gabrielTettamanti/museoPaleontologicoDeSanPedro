                    <!-- </div> -->
                </div>
          </form>

        

        </div>
        
        <div class="section">
            <a href="/news/list"> Ver lista de Noticias</a>
            <form method="POST" action="/" enctype="multipart/form-data" class="formAdmin">
                <div class="create-news">
                <legend class="legend-create-news">Crear Producto</legend>
                    <div class="create-news">
                        <input type="text" name="news_title" class="news-title" placeholder="Título">
                        <input type="date" name="news_date" class="news-date">
                    </div>
                    <div class="create-news">
                        <textarea name="news_description" class="news-description" rows="5" cols="100" placeholder="lorem ipsum"></textarea>
                    </div>
        
                    <div class="button-news">
                        <input type="file" name="news_image" accept=".jpg, .png">
                            <button type="submit" class="button-create-news"><i class="fa-solid fa-check"></i>Crear</button>
                            <button type="reset" class="button-delete-news"><i class="fa-solid fa-trash-can"></i>Deshacer</button>
                        </div>
                    </div>
            </form>

        </div>

        <div class="section">
            <a href="/sponsors/list"> Ver lista de Sponsors</a>
            <form method="POST" action="/admin/sponsors/create" enctype="multipart/form-data" class="form-sponsor">
                <div class="create-sponsor">
                <label class="label-create-sponsor">Crear Sponsor</label>
                    <div class="create-sponsor">
                        <input type="text" name="name" placeholder="Nombre">
                        <input type="text" name="status" placeholder="activo/inactivo">
                        <input type="file" name="img" accept=".jpg, .png, .jpeg">
                    </div>
                    <div>
                            <button type="submit" class="button-create-news"><i class="fa-solid fa-check"></i>Crear</button>
                            <button type="reset" class="button-delete-news"><i class="fa-solid fa-trash-can"></i>Deshacer</button>
                        </div>
                    </div>
            </form>

        </div>

        <!-- <div class="section">
                
