<body class="bodyAdmin">
    
    <%- include ('partials/header') %> 

    <main id="fullPage">

        <div class="section" id="adminLogin">

            <form action="/admin" method="post" class="form-admin">
                <div id="login">
                    <h4 class="login-title">Iniciar Sesion</h4>
                    <!-- <div id="login-form"> -->
                            <!-- <div class="email-login"> -->
                                <input type="email" name="email" class="input-login" placeholder="ejemplo@email.com">
                            <!-- </div> -->
