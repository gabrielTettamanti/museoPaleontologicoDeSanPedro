<div class="row row-cols-1 row-cols-md-3 g-3">
        <% news.forEach(not => { %>
            <div class="col">
                <a href="/news/detail/<%= not.id %>" class="card-link">
                    <div class="card h-100">
                        <img src="/img/news/<%= not.image %> " class="card-img-top">
                        <div class="card-body ">
                            <h4 class="card-title" > <%= not.title %> </h4>
                            <p class="card-title"> <%= not.date %> </p>
                            <p class="card-text"><%= not.content %></p>
                        </div>
                    </div>
                </a>
            </div>
        <% }) %>
</div>


